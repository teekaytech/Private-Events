<h1>Create new event</h1>
<%= form_for @event do |f| %>
    
    <p>
      <%= f.label :location %><br/>
      <%= f.text_field :location %>
    </p>
    <p>
      <%= f.label :date %><br/>
      <%= f.datetime_local_field :event_date %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>
    <%= f.submit :Event, value: "Create Event" %>
<% end %>
