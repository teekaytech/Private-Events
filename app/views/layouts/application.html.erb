<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light py-3">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item pr-3"><%= link_to "Private Events", root_path, class: "nav_link text-decoration-none font-weight-bolder"%></li>
        <% if current_user %>
          <li class="nav-item">
            <%= link_to "Create an Event", new_event_path, class: "nav_link text-decoration-none"%>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
        <% if current_user%>
          <li class="nav-item pr-3"><%= link_to "Logout", user_path(current_user), method: :delete, class: "nav_link text-decoration-none" %></li>
          <li class="nav-item"><%= link_to "User Page", user_path(current_user), class: "nav_link text-decoration-none" %></li>
        <%else%>
          <li class="nav-item pr-3"><%= link_to "Login", login_path, class: "nav_link text-decoration-none"%></li> 
          <li class="nav-item"><%= link_to "Sign Up", new_user_path, class: "nav_link text-decoration-none"%></li>
        <%end%>
      </ul>
    </div>
  </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
